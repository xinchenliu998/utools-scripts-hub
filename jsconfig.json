{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["utools-api-types"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "public/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
